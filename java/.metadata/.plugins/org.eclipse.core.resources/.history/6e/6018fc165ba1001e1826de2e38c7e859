package interview;

public class CountTheString {
	public static void main(String[] args) {
		String str="hello";
		
		String s[]=str.split(" ");
		
		for(int i=0;i<s.length;i++) {
			int count=1;
			for(int j=i+1;j<s.length;j++) {
				if (s[i] == s[j]) {
					count++;
					s[j]=" ";
				}
				
			}
			if (s[i] !=" ") {
				System.out.println(s[i]+ " : "+count);
			}
		}
	}
}
