package string;

import java.util.Arrays;

public class Anagram {
	public static void main(String[] args) {
		
		String s1="Earth";
		String s2="heart";
		
		s1=s1.toLowerCase();
		s2=s2.toLowerCase();
		
		char[] ch1 = s1.toCharArray();
		char[] ch2 = s2.toCharArray();
		
		Arrays.sort(ch1);
		Arrays.sort(ch2);
		
		
		
	}
}
